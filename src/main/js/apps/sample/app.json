                    ],
                    "ground": [
                        {
                            "url": "https://scene.arcgis.com/arcgis/rest/services/Zurich_DTM/ImageServer",
                            "type": "AGS_ELEVATION"
                        }
                    ]
                },
                "view": {
                    "viewmode": "3D",
                    "camera": {
                        "heading": 338.4613139877434,
                        "tilt": 65.6626297158947,
                        "position": {
                            "x": 951163.1908125386,
                            "y": 6002664.875400205,
                            "z": 793.7736872918904,
                            "spatialReference": {
                                "wkid": 102100
                            }
                        }
                    }
                }
            }
        },
        "basemaptoggler": {
            "Config": {
                "nextBasemap": "hybrid"
            }
        },
        "custominfo": {
            "CustomInfoToggleTool": [
                {
                    "widgetSettings": {
                        "content": "${info}",
                        "window": {
                            "marginBox": {
                                "w": 320,
                                "h": 500
                            },
                            "draggable": true,
                            "closable": true,
                            "modal": true,
                            "maximizable": false,
                            "resizable": true,
                            "title": "Info"
                        }
                    },
                    "type": "IMPRINT",
                    "toolClass": "ctInfo",
                    "title": "Info",
                    "tooltip": "Zeige Info",
                    "tooltipPositions": [
                        "after",
                        "above",
                        "below",
                        "before"
                    ],
                    "iconClass": "icon-custom-info-imprint",
                    "togglable": true,
                    "id": "IMPRINT_Imprint_CustomInfoTool"
                }
            ]
        },
        "templates": {
            "TemplateModel": {
                "_templates": [
                    {
                        "name": "seasons",
                        "widgets": [
                            {
                                "widgetRole": "drawer_button",
                                "attachTo": "map_topleft",
                                "props": {
                                    "layoutIndex": 0
                                }
                            },
                            {
                                "widgetRole": "sharelink",
                                "window": {
                                    "dockable": false,
                                    "dockingBar": null
                                }
                            },
                            {
                                "widgetRole": "legend",
                                "sublayout": [
                                    "mobile_portrait",
                                    "mobile_landscape"
                                ],
                                "window": {
                                    "dockable": false,
                                    "dockingBar": null
                                }
                            },
                            {
                                "widgetRole": "banner",
                                "sublayout": [
                                    "mobile_portrait"
                                ],
                                "attachTo": "footer_right"
                            }
                        ]
                    }
                ]
            }
        },
        "toolset": {
            "ToolsetManager": {
                "toolsets": [
                    {
                        "id": "mapview_tools",
                        "tools": [
                            "locateMeTool",
                            "zoomInTool",
                            "zoomOutTool",
                            "compassTool",
                            "restoreInitialViewTool"
                        ],
                        "registerWidget": {
                            "widgetRole": "mapview_tools"
                        },
                        "container": "ignore",
                        "windowType": "container",
                        "cssClass": "muted"
                    },
                    {
                        "id": "drawer_left",
                        "title": "Werkzeuge",
                        "cssClass": "ct-main-app-menu",
                        "tools": [
                            "sharelinkTool",
                            "daylightToggleTool",
                            "IMPRINT_Imprint_CustomInfoTool",
                            "IMPRINT_Imprint_CustomInfoTool_mobile"
                        ],
                        "registerWidget": {
                            "widgetRole": "drawer_button"
                        },
                        "container": "ignore",
                        "windowType": "drawer_left"
                    }
                ]
            }
        },
        "toolrules": {
            "ToolActiveStateManager": {
                "activateOnStartToolIds": [
                    "daylightToggleTool"
                ]
            }
        }
    }
}
