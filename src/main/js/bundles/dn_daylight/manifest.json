{
    "name": "dn_daylight",
    "version": "1.1.1-SNAPSHOT",
    "title": "${bundleName}",
    "description": "${bundleDescription}",
    "vendor": "con terra GmbH",
    "keywords": ["sample"],
    "icon": {},
    "productName": "devnet-mapapps-daylight",
    "dependencies": {
        "esri": "^4.14.0",
        "esri-widgets": "^4.9.0",
        "map-widget": "^4.9.0",
        "apprt-binding": "^4.9.0"
    },
    "CSS-Themes-Extension": [
        {
            "name": "*",
            "files": ["./css/styles.css"]
        }
    ],
    "layout-widgets": [
        {
            "widgetRole": "daylightWidget",
            "window": {
                "title": "${ui.windowTitle}",
                "dockTool": "daylightToggleTool",
                "closable": true,
                "maximizable": false,
                "minimizeOnClose": true,
                "resizable": false,
                "marginBox": {
                    "w": 350,
                    "h": 250,
                    "l": 20,
                    "t": 125
                },
                "minSize": {
                    "w": 350,
                    "h": 230
                },
                "windowClass": "daylight-window noPadding"
            }
        },
        {
            "widgetRole": "daylightWidget",
            "sublayout": ["mobile_landscape", "mobile_portrait"],
            "window": {
                "dockingBar": "${id}-dockingBarBottomLeft",
                "draggable": false,
                "fixEdgesInViewport": {
                    "l": true,
                    "r": true
                },
                "marginBox": {
                    "h": 250,
                    "b": 40,
                    "r": 0,
                    "l": 0
                }
            }
        },
        {
            "widgetRole": "daylightWidget",
            "sublayout": ["mobile_landscape"],
            "window": {
                "marginBox": {
                    "h": 250,
                    "w": 350,
                    "b": 0,
                    "r": 0
                }
            }
        }
    ],
    "components": [
        {
            "name": "DaylightWidgetFactory",
            "provides": ["dijit.Widget", "dn_daylight.DaylightWidgetFactory"],
            "instanceFactory": true,
            "properties": {
                "widgetRole": "daylightWidget"
            },
            "references": [
                {
                    "name": "_mapWidgetModel",
                    "providing": "map-widget.MapWidgetModel"
                },
                {
                    "name": "_daylightWidgetController",
                    "providing": "dn_daylight.DaylightWidgetController"
                }
            ]
        },
        {
            "name": "Config",
            "impl": "./DaylightWidgetController",
            "provides": ["dn_daylight.DaylightWidgetController"],
            "properties": {
                "timeSliderSteps": 5,
                "playSpeedMultiplier": 1,
                "dateOrSeason": "date",
                "enableShadows": true,
                "visibleElements": {
                    "header": true,
                    "playButtons": true,
                    "datePicker": true,
                    "timezone": false,
                    "sunLightingToggle ": false,
                    "shadowsToggle": false
                }
            },
            "references": [
                {
                    "name": "_mapWidgetModel",
                    "providing": "map-widget.MapWidgetModel"
                }
            ]
        },
        {
            "name": "DaylightToggleTool",
            "impl": "ct/tools/Tool",
            "provides": ["ct.tools.Tool"],
            "propertiesConstructor": true,
            "properties": {
                "id": "daylightToggleTool",
                "title": "${tool.title}",
                "tooltip": "${tool.tooltip}",
                "iconClass": "icon-transparency",
                "activateHandler": "onToolActivated",
                "deactivateHandler": "onToolDeactivated",
                "toolRole": "toolset",
                "togglable": true,
                "noGroup": true,
                "rules": {
                    "viewmode": "3D",
                    "ruleSuccessProperty": "visibility"
                }
            },
            "references": [
                {
                    "name": "handlerScope",
                    "providing": "dn_daylight.DaylightWidgetController"
                }
            ]
        }
    ]
}
