{
    "properties": {
        "title": "${apptitle}"
    },
    "load": {
        "bundleLocations": [
            "localbundles",
            "bundles"
        ],
        "allowedBundles": [
            "system",
            "console",
            "notifier",
            "splashscreen",
            "templatelayout",
            "template-seasons",
            "theme-everlasting",
            "map-init",
            "map-preload-3D",
            "toolset",
            "toolrules",
            "banner",
            "basemaptoggler",
            "custominfo",
            "mapnavigation",
            "scalebar",
            "locateme",
            "share-link",
            "omnisearch",
            "locator-store",
            "popups-default",
            "dn_daylight"
        ],
        "require": [
            "${app}.app"
        ],
        "i18n": [
            "bundle"
        ]
    },
    "bundles": {
        "banner": {
            "BannerWidget": {
                "label": "Developer Network",
                "imagePosition": "above",
                "image": "resource('${app}:/images/logo_conterra.png')",
                "imageWidth": 200,
                "link": "https://developernetwork.conterra.de"
            }
        },
        "map-init": {
            "Config": {
                "basemaps": [
                    {
                        "id": "streets",
                        "title": "Streets",
                        "selected": true,
                        "basemap": "topo-vector"
                    }
                ],
                "map": {
                    "layers": [
                        {
                            "id": "group",
                            "type": "GROUP",
                            "title": "3D-Gebäude Zürich",
                            "visibilityMode": "exclusive",
